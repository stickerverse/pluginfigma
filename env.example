# Canvas Weaver Environment Configuration
# Copy this file to .env and update with your production values

# Environment
NODE_ENV=development

# Server Configuration
WS_PORT=8080
HTTP_PORT=3000

# WebSocket URLs
WS_URL_DEV=ws://localhost:8080
WS_URL_PROD=wss://api.canvasweaver.com/ws

# CORS Origins (comma-separated)
CORS_ORIGINS_DEV=http://localhost:3000,https://www.figma.com
CORS_ORIGINS_PROD=https://www.figma.com,chrome-extension://YOUR_EXTENSION_ID

# Chrome Extension ID
CHROME_EXTENSION_ID_DEV=development
CHROME_EXTENSION_ID_PROD=your-production-extension-id

# API Configuration
MAX_PAYLOAD_SIZE=50mb
HEARTBEAT_INTERVAL=30000
MAX_RETRIES=3
TIMEOUT_MS=30000

# Logging
ENABLE_LOGGING=true

# Monitoring & Analytics (for future use)
# SENTRY_DSN=
# ANALYTICS_ID=
# ERROR_TRACKING_URL=